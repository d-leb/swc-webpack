{
  "env": {
    "browser": false,
    "es6": true
  },
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "block-scoped-var": 1,
    "comma-dangle": 0,
    "implicit-arrow-linebreak": 0,
    "max-len": [
      "error",
      {
        "code": 120
      }
    ],
    "new-cap": 0,
    "no-console": 0,
    "no-underscore-dangle": 0,
    "import/extensions": 0,
    "import/prefer-default-export": 0,
    "semi": ["error", "never"]
  }
}
